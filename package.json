{
  "name": "mail-box",
  "version": "1.0.0",
  "scripts": {
    "install:all": "yarn install && yarn install:api && yarn install:frontend",
    "install:api": "cd api && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "build": "yarn build:api && yarn build:frontend",
    "build:api": "cd api && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "start:api": "cd api && yarn start",
    "dev:api": "cd api && yarn run dev",
    "watch:api": "cd api && yarn run watch",
    "start:frontend": "cd frontend && yarn start",
    "dev:frontend": "cd frontend && yarn run dev"
  }
}

